<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.surfstudio.android.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SurfMviDemo">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SurfMviDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <meta-data
                android:name="ru.surfstudio.android.demo.initializer.ANRInitializer"
                android:value="androidx.startup" />

            <meta-data
                android:name="ru.surfstudio.android.demo.initializer.LoggerInitializer"
                android:value="androidx.startup" />

            <meta-data
                android:name="ru.surfstudio.android.demo.initializer.FirebaseInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>